<header>
    <nav>
        <ul class="top-menu">
            <button onclick="addPost()">Add post</button>
            <li><a href="/">Home</a></li>
            
            <!-- <li><a href="signup">Sign Up</a></li> -->
            <li><a href="profile">Profile</a></li>

            <li><a href="/authors">Authors</a></li>
            <li><a href="/authors/new">Add author</a></li>

            <% if (locals.username) {%><p>Welcome <%= locals.username %> ,</p><li id="logout">Log Out</li><%} else {%>
                                       <li id="signup">Sign Up</li><li><a href="login">Log In</a></li><%}%>
            
        </ul>
    </nav>
    <div id="signup-modal" class="signup modal">
        <h2>Sign Up</h2>

        <form action="/signup" method="POST">
            <div class="form-row">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-row">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-row">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-buttons">
                <button type="cancel">Cancel</button>
                <button type="submit">Sign Up</button>                
            </div>
        </form>
    </div>
    <div id="login-modal" class="login modal">
        <h2>Log In</h2>

        <form action="/login" method="POST">
            <div class="form-row">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-row">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-buttons">
                <button type="submit">Log In</button>
            </div>
        </form>
    </div>
</header>